<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/marco">
    <include layout="@layout/app_bar"
        android:id="@+id/appbar3"/>
    <View
        android:id="@+id/toolbar_shadow2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_shadow"
        android:layout_below="@id/appbar3"
        android:background="@drawable/toolbar_dropshadow" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_shadow2"
        android:text="@string/actividad3_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="25sp"
        android:background="@color/fondo_toast"
        android:textColor="@android:color/white"
        android:paddingLeft="45sp"
        android:paddingRight="45sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/actividad3_niño_malo"
        android:textSize="25sp"
        android:id="@+id/pacoMalo"
        android:background="@color/fondoPalabrasBActividad3"
        android:paddingTop="12dp"
        android:textColor="@android:color/white"
        android:layout_marginTop="140dp"
        android:paddingLeft="200dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/actividad3_perro"
        android:id="@+id/perro"
        android:layout_marginTop="220dp"
        android:textSize="25sp"
        android:background="@color/fondoPalabrasBActividad3"
        android:textColor="@android:color/white"
        android:paddingTop="12dp"
        android:paddingLeft="150dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/actividad3_ciego"
        android:layout_marginTop="300dp"
        android:background="@color/fondoPalabrasBActividad3"
        android:textColor="@android:color/white"
        android:paddingTop="7dp"
        android:paddingLeft="170dp"
        android:id="@+id/ciego"
        android:textSize="25sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="Personaje\nantagónico"
        android:textSize="25sp"
        android:id="@+id/personajeAntagonico"
        android:background="@color/fondoPalabrasActividad3"
        android:textColor="@android:color/white"
        android:paddingTop="10dp"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="80dp"
        android:layout_marginStart="80dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="Personaje\nPrincipal"
        android:textSize="25sp"
        android:background="@color/fondoPalabrasActividad3"
        android:textColor="@android:color/white"
        android:paddingTop="10dp"
        android:id="@+id/principal"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="250dp"
        android:layout_marginStart="250dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="Personaje\nsecundario"
        android:id="@+id/secundario"
        android:layout_marginTop="400dp"
        android:background="@color/fondoPalabrasActividad3"
        android:textColor="@android:color/white"
        android:paddingTop="6dp"
        android:layout_marginLeft="400dp"
        android:layout_marginStart="400dp"
        android:textSize="25sp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/calificar"
        android:layout_alignParentBottom="true"
        android:id="@+id/btnCalificar3"
        android:textSize="25sp"/>

</RelativeLayout>