<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/marco">
    <include layout="@layout/app_bar"
        android:id="@+id/appbar3"/>
    <View
        android:id="@+id/toolbar_shadow2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_shadow"
        android:layout_below="@id/appbar3"
        android:background="@drawable/toolbar_dropshadow" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_shadow2"
        android:text="@string/actividad3_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="35sp"
        android:background="@color/fondo_toast"
        android:textColor="@android:color/white"
        android:gravity="center|center_vertical"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/actividad3_niÃ±o_malo"
        android:textSize="35sp"
        android:id="@+id/pacoMalo"
        android:background="@color/fondoPalabrasBActividad3"
        android:textColor="@android:color/white"
        android:layout_marginTop="170dp"
        android:gravity="center|center_vertical" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/actividad3_perro"
        android:id="@+id/perro"
        android:layout_marginTop="240dp"
        android:textSize="35sp"
        android:background="@color/fondoPalabrasBActividad3"
        android:textColor="@android:color/white"
        android:gravity="center|center_vertical"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/actividad3_ciego"
        android:layout_marginTop="310dp"
        android:background="@color/fondoPalabrasBActividad3"
        android:textColor="@android:color/white"
        android:gravity="center|center_vertical"
        android:id="@+id/ciego"
        android:textSize="35sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="@string/actividad3_antagonico"
        android:textSize="20sp"
        android:id="@+id/personajeAntagonico"
        android:background="@color/fondoPalabrasActividad3"
        android:textColor="@android:color/white"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="400dp"
        android:gravity="center|center_vertical"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="@string/actividad3_principal"
        android:textSize="20sp"
        android:background="@color/fondoPalabrasActividad3"
        android:textColor="@android:color/white"
        android:id="@+id/principal"
        android:layout_marginTop="400dp"
        android:layout_centerHorizontal="true"
        android:gravity="center|center_vertical"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="@string/actividad3_secundario"
        android:id="@+id/secundario"
        android:layout_marginTop="400dp"
        android:background="@color/fondoPalabrasActividad3"
        android:textColor="@android:color/white"
        android:gravity="center|center_vertical"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textSize="20sp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/calificar"
        android:layout_alignParentBottom="true"
        android:id="@+id/btnCalificar3"
        android:textSize="35sp" />

</RelativeLayout>