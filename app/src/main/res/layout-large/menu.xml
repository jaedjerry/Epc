<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/app_bar"
        android:id="@+id/appbarMenu" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_shadow"
        android:background="@drawable/toolbar_dropshadow" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:drawableLeft="@mipmap/ic_leer"
        android:gravity="left|center_vertical"
        android:text="@string/leerCuento"
        android:drawablePadding="5dp"
        android:id="@+id/btnLeer"
        android:textSize="35sp"
        android:layout_marginTop="20dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:drawableLeft="@mipmap/ic_ejercicios"
        android:gravity="left|center_vertical"
        android:text="@string/realizar"
        android:drawablePadding="5dp"
        android:id="@+id/btnEjercicios"
        android:textSize="35sp"
        android:layout_marginTop="20dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:drawableLeft="@mipmap/ic_creditos"
        android:gravity="left|center_vertical"
        android:text="@string/creditos"
        android:drawablePadding="5dp"
        android:id="@+id/btnCreditos"
        android:textSize="35sp"
        android:layout_marginTop="20dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:src="@mipmap/dario_3"
        android:scaleType="centerCrop"/>
</LinearLayout>